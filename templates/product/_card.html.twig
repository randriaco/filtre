<div class="card">
    <img src="{{ asset('images/') ~ product.image }}" alt="">
    <div class="card-body">
        <h5 class="card-title"> {{ product.name }} </h5>
        <div class="card-title text-primary" style="font-weight:bold;font-size:1.5em;">
            {{ product.price | number_format(0, ',', '') }}
            {% if product.promo %}
                <div class="text text-warning">Promo !</div>
            {% endif %}
        </div>
        <p class="text text-muted">{{ product.description }}</p>
    </div>
</div>